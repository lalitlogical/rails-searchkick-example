<% application = fetch :application, 'rails-searchkick-example' %>
<% socket_path = fetch :nginx_socket_path, '/tmp/sockets/puma.sock' %>

upstream <%= application %> {
  server unix://<%= fetch :puma_socket %>;
}

server {
  listen 80 default deferred;
  server_name <%= fetch :server_name, fetch(:domain) %>
  root <%= "#{fetch :current_path}/public" %>;

  location ^~ /assets/ {
    gzip_static on;
    expires max;
    add_header Cache-Control public;
  }

  try_files $uri/index.html $uri @<%= application %>;
  location @<%= application %> {
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header Host $http_host;
    proxy_redirect off;
    proxy_pass http://<%= application %>;
  }

  error_page 500 502 503 504 /500.html;
  client_max_body_size 4G;
  keepalive_timeout 10;
}
